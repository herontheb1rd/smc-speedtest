<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMCSpeedtest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="fontFamily">@font/ibm_plex_sans</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="RunTestButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/ibm_plex_mono</item>
    </style>
    <style name="BoldTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ibm_plex_sans_semibold</item>
    </style>
</resources>