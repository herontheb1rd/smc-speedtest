<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMCSpeedtest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1B1F2A</item>
        <item name="colorPrimaryVariant">#1E1E1E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1B1F2A</item>
        <item name="colorSecondaryVariant">#1E2330</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">#A6ADBD</item>
        <item name="colorOnTertiary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
    </style>
</resources>